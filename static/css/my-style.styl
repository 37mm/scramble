html, body
  height 100%

hr.invis
  border-color transparent

:focus
  outline none !important

.invis-input
  background transparent
  border none
  margin none
  padding-left 0
  // height 100%
  width 100%

.invis-input-group
  background transparent
  border none
  margin none
  height 100%
  width 100%
  *
    border none

.lead
  margin-bottom 0 !important
  padding-bottom $line-height-computed !important

.uppercase
  text-transform uppercase

.capitalize
  text-transform capitalize

.sidebar
  // positison fixed
  overflow scroll

.main-panel
  position fixed
  overflow scroll
  max-height 100%
.form-signin
  margin-top 10%
  max-width 400px
  margin-right auto
  margin-left auto

.logo-img
  width 1em
  margin-right .25em
  vertical-align top

.strike
  text-align center
  position relative
  .label
    font-style italic
    background $body-bg
    color $text-color
    position absolute
    left 45%
    right 45%
    top -5px