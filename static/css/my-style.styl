html, body
  height 100%

hr.invis
  border-color transparent

:focus
  outline none !important

.invis-input
  background transparent
  border none
  margin none
  padding-left 0
  // height 100%
  width 100%

.invis-input-group
  background transparent
  border none
  margin none
  height 100%
  width 100%
  *
    border none

.container
  margin-left 0

$nav-height = 80px
$sidebar-percent-width = 40%

.sidebar
  position fixed
  padding-right ($grid-gutter-width / 2)
  padding-left ($grid-gutter-width / 2)
  top $nav-height
  left 0
  bottom 0
  width 400px
  overflow scroll

.main-panel
  position fixed
  padding-right ($grid-gutter-width / 2)
  padding-left ($grid-gutter-width / 2)
  top $nav-height
  left 400px
  bottom 0
  width 600px
  overflow scroll

.lead
  margin-bottom 0 !important
  padding-bottom $line-height-computed !important

.uppercase
  text-transform uppercase

.capitalize
  text-transform capitalize

