.scrolltainer
  bottom 0
  overflow scroll
  position relative

.scroller
  position absolute
  top 60px
  bottom 85px
  left ($grid-gutter-width / 2)
  right ($grid-gutter-width / 2)
  overflow scroll

.form-signin
  margin-top 10%
  max-width 400px
  margin-right auto
  margin-left auto

.logo-img
  width 1em
  margin-right .25em
  vertical-align top

.strike
  text-align center
  position relative
  .label
    font-style italic
    background $body-bg
    color $text-color
    position absolute
    left 45%
    right 45%
    top -5px